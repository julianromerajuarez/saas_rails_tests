
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    - is_checked = (!@selected_ratings.nil? && @selected_ratings.include?(rating))
    = check_box_tag "ratings[#{rating}]", is_checked, is_checked, {:id => "ratings_#{rating}"}
  = submit_tag 'Refresh', :id => 'ratings_submit' 

%table#movies
  %thead
    %tr
      %th{:id => 'title_cabecera', :class => es_ordenable('title_cabecera', @sort_order)}= link_to 'Movie Title', movies_path(:sort_order => 'title', :ratings => params['ratings']) 
      %th Rating
      %th{:id => 'release_date_cabecera', :class => es_ordenable('release_date_cabecera', @sort_order)}= link_to 'Release Date', movies_path(:sort_order => 'release_date', :ratings => params['ratings'])
      %th More Info
  %tbody


    - @movies.each do |movie|

      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)





= link_to 'Add new movie', new_movie_path
